/* masthead =============== */
header#masthead {
  position: relative;
  height: 60px; padding: 10px;
  z-index: 10;

  h1 {
    background: url(<%= asset_path("logo.png") %>) no-repeat;
    width: 58px; height: 58px;
  }

  nav.sec {
    position: absolute; top: 10px; right: 10px;
    a.settings {
      position: relative; z-index: 12;
      display: block;
      background: url(<%= asset_path("gear.png") %>) center center no-repeat;
      width: 12px; height: 12px;
      text-indent: -999em;
      padding: 5px;
      border: 1px solid transparent;
    }

    a.pop {
      border: 1px solid #b2b2b2; border-bottom: none;
      background: #fff url(<%= asset_path("gear.png") %>) center center no-repeat;
    }

    ul {
      display: none;
      position: absolute; right: 0; top: 22px;
      border: 1px solid #b2b2b2;
      @include rounded-corner;
      @include rounded-top-corner(0);
      padding: 3px 0;
      background: #fff;
      z-index: 11;
      @include box-shadow(0 1px 5px rgba(0, 0, 0, 0.3));

      li {

        @include rounded-corner(0px);
        a {
          font-weight: normal;
          font-size: 90%;
          color: #000;
          display: block;
          padding: 1px 4px;
          line-height: 130%;
          border-top: 1px solid #fff;
          border-bottom: 1px solid #fff;
          position: relative;

          &:hover {
            background: #1b78d9;
            background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#319be7), to(#1b78d9));
            background-image: -moz-linear-gradient(top, #319be7, #1b78d9);
            background-image: -o-linear-gradient(top, #319be7, #1b78d9);
/*            filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#319be7', endColorStr='#1b78d9');*/
            border-top: 1px solid #148ddf;
            border-bottom: 1px solid #1666c2;
            color: #fff;
            @include rounded-corner(0px);
          }

          &:active {
            background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#1b78d9), to(#319be7));
            background-image: -moz-linear-gradient(top, #1b78d9, #319be7);
            background-image: -o-linear-gradient(top, #1b78d9, #319be7);
/*            filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#1b78d9', endColorStr='#319be7');*/
            border-bottom: 1px solid #148ddf;
            border-top: 1px solid #1666c2;
          }
        }
      }
    }
  }

  nav.primary {
    position: absolute; right: 10px; bottom: 10px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -o-user-select: none;
    -khtml-user-select: none;
    user-select: none;

    li {
      margin-left: 8px;
      float: left;
      position: relative;

      a {
        display: block;
        padding: 3px 10px;
        font-weight: bold;
        color: #4d4d4d;
      }

      a.current {
        background-color: #51585f;
        color: #fff;
        @include rounded-corner;
      }

      a.has_sub {
        padding-right: 23px;
      }

      span.pointer {
        background: url(<%= asset_path("sub_pointer.png") %>) 0 0 no-repeat;
        width: 18px; height: 5px;
        display: block;
        position: absolute; right: 0; top: 12px;
      }

      ul.sub {
        position: absolute;
        z-index: 10;
        background: #51585f;
        float: left;
        width: 140px;
        padding: 5px 0;
        display: none;

        @include rounded-corner;
        -webkit-border-top-left-radius: 0;
        -moz-border-radius-topleft: 0;
        border-top-left-radius: 0;

        @include box-shadow(1px 1px 1px rgba(0, 0, 0, 0.3));

        li {
          margin-left: 0;

          a {
            width: 120px;
            color: #dadada;
            font-weight: normal; font-size: 80%;
            padding: 1px 10px;

            &:hover {
              background: #333c46;
              color: #fff;
              @include rounded-corner(0);
            }

            &:active { background: #29313a; }
          }
        }
      }

      ul.sub.agreements {
        width: 160px;

        li a { width: 140px; }
      }

      ul.sub.jobs {
        width: 110px;

        li {
          a {
            width: 90px;
          }
        }
      }
    }
  }
}

header#masthead nav ul li:hover span.pointer, header#masthead nav ul li a.current + span.pointer {
  background: url(<%= asset_path("sub_pointer.png") %>) 0 -5px no-repeat;
}

header#masthead nav ul li:hover a {
  background-color: #51585f;
  color: #fff;
  @include rounded-corner;
}

header#masthead nav ul li:hover a.has_sub {
