/*        -webkit-font-smoothing: antialiased;*/
        cursor: pointer;

        -webkit-user-select: none;
        -moz-user-select: none;

        -moz-box-shadow: inset 0 1px 0 #ffffff,inset 0 -1px 0 #d3d9e1;
        -webkit-box-shadow: inset 0 1px 0 #ffffff,inset 0 -1px 0 #d3d9e1;
        box-shadow: inset 0 1px 0 #ffffff,inset 0 -1px 0 #d3d9e1;

        display: block; height: 25px; line-height: 25px;
      }

      li.active a {
        display: block;
        height: 26px; line-height: 26px;
        background-color: #748dbb;
        background-image: -moz-linear-gradient(center top,#adbdd7 0,#748dbb 100%);
        background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0,#adbdd7),color-stop(1,#748dbb));
        background-image: -webkit-linear-gradient(top,#adbdd7 0,#748dbb 100%);
        background-image: -o-linear-gradient(top,#adbdd7 0,#748dbb 100%);
        background-image: linear-gradient(top,#adbdd7 0,#748dbb 100%);
/*        filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#adbdd7', endColorStr='#748dbb');*/

        margin: -1px -1px 0 0;
        color: #fff;
        font-weight: bold;
        text-shadow: 0 1px 1px #474E59;

        -moz-box-shadow: inset 0 1px 0 #899cc0,inset 0 2px 0 #b4c6e4,inset 0 -1px 0 #6c7b98;
        -webkit-box-shadow: inset 0 1px 0 #899cc0,inset 0 2px 0 #b4c6e4,inset 0 -1px 0 #6c7b98;
        box-shadow: inset 0 1px 0 #899cc0,inset 0 2px 0 #b4c6e4,inset 0 -1px 0 #6c7b98;

        .pill {
           right: 6px; top: 7px;
           opacity: 1.0;
        }
      }
    }

    ul.roster li a span.calendar {
      background: url(<%= asset_path("icons/16/roster_calendar.png") %>) left center no-repeat;
      display: block; width: 16px; height: 16px;
      float: left; margin-right: 3px; position: relative; top: 4px;
    }

    ul.roster li.active a span.calendar {
      background: url(<%= asset_path("icons/16/roster_calendar_active.png") %>) left center no-repeat;
    }
  }

  section#view {
    position: relative;
    -webkit-border-bottom-right-radius: 3px;
    -moz-border-radius-bottomright: 3px;
    border-bottom-right-radius: 3px;
    float: right;
    width: 769px; height: 100%; min-height: 300px;
    background: url(<%= asset_path("list_top_bg.gif") %>) top left repeat-x, url(<%= asset_path("list_bg.gif") %>);

    .overlay {
      background: #f6f5ee;
      opacity: 0.7;
      z-index: 3;
      position: absolute; top: 0;
      width: 769px;
      height: 100%;
      display: none;
    }
  }
}

/* Pill counter =============== */
.pill {
  opacity: 0.2;
  position: absolute; top: 6px; right: 5px;
  width: 60px;
  @include helvetica(85%, bold);
  -webkit-font-smoothing: antialiased;
  color: #fff;
  text-align: center;
  text-shadow: 0 1px 1px #474E59;

  .l {
    background: #d36860;
    -webkit-box-shadow: rgba(0, 0, 0, 0.5) 0px 1px 2px inset;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) inset;
    float: left;
    width: 29px;
    @include rounded-left-corner(15px);
  }

  .r {
    background: #617ba4;
    -webkit-box-shadow: rgba(0, 0, 0, 0.5) 0px 1px 2px inset;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) inset;
    float: right;
    width: 29px;
    @include rounded-right-corner(15px);
  }

  &:hover {
    opacity: 1.0;
  }
}

