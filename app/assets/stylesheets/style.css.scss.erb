@import "mixins.css.scss";

/* textfield, textarea =============== */
input[type='text'], input[type='password'], textarea {
  @include rounded-corner(2px);
  @include helvetica(100%);
  color: #555;
  resize: none;
  background-color: #fefefe;
  margin: 0; padding: 3px;
  border-top: 1px solid #8e8e8e; border-left: 1px solid #8e8e8e; border-bottom: 1px solid #e1e1e1; border-right: 1px solid #e1e1e1;

  &:focus {
    @include box-shadow(0 1px 2px rgba(0, 0, 0, 0.2));
    background-color: #fefeee;
    border: 1px solid #777;
    outline: 0;
  }
}

.highlight { background: yellow; }

.layout {
  margin: 0 auto;
  width: 980px;
}

.info {
  @include helvetica(90%);
  background: url(<%= asset_path('info.png') %>) left 3px no-repeat;
  padding-left: 18px; color: #888; font-style: italic;
  a { text-decoration: underline; }
}

/* flash message =============== */
.flash {
  display: none; cursor: pointer;
  background: #fefbda; border: 1px solid #d9d7cd; border-top: none; opacity: 0.98;
  color: #534e2e;
  @include lucida(90%, bold);
  @include rounded-bottom-corner;
  @include box-shadow(0 8px 24px rgba(0, 0, 0, 0.2));
  width: 900px;
  position: absolute; left: 40px;
  z-index: 6;

  .msg { padding: 10px; padding-left: 30px; }
  .alert { background: url(<%= asset_path("icons/16/alert.png") %>) 10px 11px no-repeat; }
  .notice { background: url(<%= asset_path("icons/16/notice.png") %>) 10px 11px no-repeat; }
}

/* body =============== */
body {
  @include helvetica(90%);
}

body#samofund_home {
